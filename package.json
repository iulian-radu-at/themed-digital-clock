{
  "name": "themed-digital-clock",
  "version": "1.1.4",
  "description": "A digital clock with a dark and a light theme",
  "main": "lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "deploy": "cross-env NODE_ENV=production yarn build && yarn publish --non-interactive",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -c storybook",
    "build-storybook": "build-storybook -c storybook -o docs",
    "commit-storybook": "git add . && git commit -m \"Updated storybook\"",
    "all": "yarn install && yarn build-storybook && yarn deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iulian-radu-at/themed-digital-clock.git"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "keywords": [
    "clock",
    "digital clock",
    "react",
    "react-component",
    "ui"
  ],
  "author": "Iulian Radu <iulian.radu@gmx.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iulian-radu-at/themed-digital-clock/issues"
  },
  "homepage": "https://github.com/iulian-radu-at/themed-digital-clock#readme",
  "dependencies": {
    "digital-digit": "^1.1.4",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@storybook/react": "^5.3.19",
    "@types/babel-core": "^6.25.6",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/moment-timezone": "^0.5.13",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/rimraf": "^3.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules",
      "./history"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "src/*(/(__tests?__/)([^_].*/)*?[^_][^/]*?\\.(test|spec)?\\.(js?))$",
    "setupFiles": [
      "./enzymeAdapter.setup.js"
    ]
  }
}
